<RadzenDropDown AllowClear="true" TValue="string" Style="width:300px" Data=@(PlayerList.Select(c => c.Name).Distinct()) Change=@(args => OnChange(args)) />

@code {
    [Parameter]
    public List<Player> PlayerList { get; set; }
    [Parameter]
    public Player SelectedPlayer { get; set; }
    [Parameter]
    public EventCallback<Player> SelectedPlayerChanged { get; set; }

    public void OnChange(object value)
    {
        SelectedPlayerChanged.InvokeAsync(PlayerList.Find(i => i.Name == value as string));
    }
}
