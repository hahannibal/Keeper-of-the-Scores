<RadzenDropDown AllowClear="true" TValue="Player" Style="width:300px" Data="PlayerList" Change=@(args => OnChange(args)) />

@code {
    [Parameter]
    public List<Player> PlayerList { get; set; }
    [Parameter]
    public Player SelectedPlayer { get; set; }
    [Parameter]
    public EventCallback<Player> SelectedPlayerChanged { get; set; }

    public void OnChange(object value)
    {
        SelectedPlayerChanged.InvokeAsync(value as Player);
    }
}
