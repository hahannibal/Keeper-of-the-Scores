<RadzenDropDown AllowClear="true" TValue="string" Style="width:300px" Data=@(TeamList.Select(c => c.TeamName).Distinct()) Change=@(args => OnChange(args)) />


    @code {
        [Parameter]
        public Team TeamSelect { get; set; }
        [Parameter]
        public List<Team> TeamList { get; set; }
        [Parameter]
        public EventCallback<Team> TeamSelectChanged { get; set; }

        public void OnChange(object value)
        {
            TeamSelectChanged.InvokeAsync(TeamList.Find(i => i.TeamName == value as string));
        }

    }
