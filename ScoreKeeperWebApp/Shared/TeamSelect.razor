<RadzenDropDown AllowClear="true" TValue="Team" Style="width:300px" Data="TeamList" @bind-value="SelectedTeam" Change=@(args => OnChange(args)) />


@code {
    [Parameter]
    public Team SelectedTeam { get; set; }
    [Parameter]
    public List<Team> TeamList { get; set; }
    [Parameter]
    public EventCallback<Team> SelectedTeamChanged { get; set; }

    public void OnChange(object value)
    {
        SelectedTeamChanged.InvokeAsync(value as Team);
    }

}