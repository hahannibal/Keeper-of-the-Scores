@code
{
    List<Team> teams = Keeper_of_the_Scores.Data.DataHandler.TeamList;
    public static Team teamA;
    public static Team teamB;
    void OnChangeA(object value)
    {
        teamA = teams.Find(i => i.TeamName == value as string);
    }
    void OnChangeB(object value)
    {
        teamB = teams.Find(i => i.TeamName == value as string);
    }
}