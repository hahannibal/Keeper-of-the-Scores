<RadzenDropDown AllowClear="true" TValue="string" Style="width:300px" Data=@(teams.Select(c => c.TeamName).Distinct()) Change=@(args => OnChangeA(args)) />

@if (teamA != null)
{
    <ul>
        @foreach (var player in teamA.Players)
        {
            <li>@player.Name</li>
        }
    </ul>
}

