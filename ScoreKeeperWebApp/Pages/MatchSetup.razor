@page "/matchsetup"
@inject NavigationManager UriHelper

<h1>Match Setup: </h1>
<h5>On this page you can set up a new match!</h5>
<h6>Select the 2 teams:</h6>

<div><TeamSelect TeamList="@Keeper_of_the_Scores.Data.DataHandler.TeamList" @bind-SelectedTeam="teamA"></TeamSelect> vs <TeamSelect TeamList="@Keeper_of_the_Scores.Data.DataHandler.TeamList" @bind-SelectedTeam="teamB"></TeamSelect></div> 


<RadzenSelectBar @bind-Value=@inDoor TValue="bool">
    <Items>
        <RadzenSelectBarItem Text="OutDoor/7v7" Value="true" />
        <RadzenSelectBarItem Text="InDoor/5v5" Value="false" />
    </Items>
</RadzenSelectBar>

<h3 style="margin-top: 2rem">Enter the cap</h3>
<RadzenNumeric TValue="int" Min="1" Max="15" />

<p><RadzenButton Click=@(args => Navigate()) Text="Start" Style="margin-bottom: 20px; width: 150px" /></p>

@code {
    public static Team teamA;
    public static Team teamB;
    bool inDoor = true;
    public static Match currentMatch = new Match();

    void Navigate()
    {
        currentMatch.Team1 = teamA;
        currentMatch.Team2 = teamB;
        currentMatch.Scores = new List<Score>();
        currentMatch.RefName = "Tamas";
        UriHelper.NavigateTo("currentmatch");
    }

}
